generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  USER
}

enum EventType {
  OFFLINE
  ONLINE
}

model Profile {
  id       String  @id @db.Uuid
  role     Role    @default(USER)
  user_id  String  @unique
  username String  @unique
  Event    Event[]

  @@map("profiles")
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  start_date  DateTime
  end_date    DateTime?
  type        EventType
  owner       Profile   @relation(fields: [owner_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  owner_id    String    @db.Uuid
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt

  @@map("events")
}
