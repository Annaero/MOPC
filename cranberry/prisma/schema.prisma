generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider                         = "zod-prisma-types"
  output                           = "../src/lib/models/event"
  createOptionalDefaultValuesTypes = true
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URL")
}

enum EventType {
  OFFLINE
  ONLINE
}

model Event {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  description String
  startDate   DateTime
  endDate     DateTime?
  type        EventType
  owner       String ///z.string().uuid()
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model UserCard {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userId     String   @unique ///z.string().uuid()
  nickname   String   @unique
  fisrtName  String?
  secondName String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
