generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider                         = "zod-prisma-types"
  output                           = "../src/lib/models"
  createOptionalDefaultValuesTypes = true
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum EventType {
  OFFLINE
  ONLINE
}

model Profile {
  id       Int     @id @default(autoincrement())
  userId   String  @unique @map("user_id") @db.Uuid
  username String  @unique @db.VarChar(255)
  about    String  @default("") @db.Text
  link     String? @db.VarChar(510) /// @zod.custom.use(z.string().url({ message: "Please enter correct URL" }).optional().or(z.literal('')))
  Event    Event[]

  @@map("profiles")
}

model Event {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String
  startDate   DateTime  @map("start_date")
  endDate     DateTime? @map("end_date")
  type        EventType
  owner       Profile   @relation(fields: [ownerId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  ownerId     Int       @map("owner_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("events")
}
